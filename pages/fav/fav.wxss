.box-pic-multi .box-options .box-li .box-item .icon { font-size: 20rpx; margin-left: 4rpx; }
.box-pic-multi .box-options-page { background: #fff; position: absolute; top: 96rpx; left: 0; right: 0; overflow: hidden; }
.box-pic-multi .box-options-body .box-ul { width: 110%; }
.box-pic-multi .box-options-body .box-li { width: 170rpx; height: 60rpx; line-height: 60rpx; margin: 20rpx 38rpx; color: #404040; border: 2rpx solid #eee; float: left; border-radius: 6rpx; font-size: 24rpx; }
.box-pic-multi .box-options-body .box-li.active { border-color: #2fbd80; color: #2fbd80; }
