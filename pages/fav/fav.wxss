.box-pic-header { position: fixed; top: 0; right: 0; left: 0; z-index: 80; }
.box-tab-pic { background: #fff; overflow: hidden; display: flex; width: 100%; }
.box-tab-pic .box-li { width: 100%; height: 100%; text-align: center; font-size: 0; }
.box-tab-pic .box-li .box-item { width: 234rpx; font-size: 32rpx; color: #333; line-height: 106rpx; text-align: center; display: inline-block; border-bottom: 6rpx solid #fff; }
.box-tab-pic .box-li .box-item.active { color: #2fbd80; border-color: #2fbd80; }
.box-pic-multi { position: relative; }
