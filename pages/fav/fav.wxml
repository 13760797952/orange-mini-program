<import  src="/templates/public"  />
<view class="container"><view class="box-pic"><view class="box-pic-header"><view class="box-tab-pic"><view class="box-li"><view bindtap="clickPicType" class="box-item transition-all {{picType==0?'active':''}}">套图</view></view><view class="box-li"><view bindtap="clickPicType" class="box-item transition-all {{picType==1?'active':''}}">单图</view></view></view></view><view class="box-pic-list-multi transition-all {{picType==0?'':'none'}}"><view class="box-cont"><view class="box-ul"><block wx:for="{{picListMulti}}" wx:key="{{item.id}}" wx:for-item="item"><view class="box-li"><navigator url="/pages/play/play?type=0&id={{item.id}}"><image mode="widthFix" src="{{item.imageurl}}"></image><view class="box-title">{{item.name}}</view><view class="box-attr"><view class="ba-left">{{item.show_num}} 浏览</view><view class="ba-right"><i class="icon iconfont icon-favorfill"></i>{{item.fav_num}}</view></view></navigator></view></block></view></view></view><view class="box-pic-list-single transition-all {{picType==1?'':'none'}}"><view class="box-cont"><view class="box-ul"><block wx:for="{{picListSingle}}" wx:key="{{item.id}}" wx:for-item="item"><view class="box-li"><navigator url="/pages/play/play?type=1&id={{item.id}}"><image mode="widthFix" src="{{item.imageurl}}"></image><view class="box-attr"><view class="ba-right"><i class="icon iconfont icon-favorfill"></i>{{item.fav_num}}</view></view></navigator></view></block></view></view></view></view><view class="space-line"></view><view class="box-footer-padding"></view></view>
