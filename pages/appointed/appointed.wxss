/* pages/appointed/appointed.wxss */
.tc{
  text-align: center;
}
.them-color{
  color: #EE6D00;
}
.font-bold {
  font-weight: bold;
}
.f24 {
  font-size: 46rpx;
}
.f20 {
  font-size: 40rpx;
}
.f16 {
  font-size: 32rpx;
}
page{
  background: #f7f7f7;
}
.banner image{
  width: 100%;
  height:  261rpx;
}
.sec {
  width: 90%;
  height: auto;
  background-color: #fff;
  margin: 10rpx 5%;
  border-radius: 10px;
  box-shadow: 0 0 46rpx #E4E3E3;
}
.sec .title {
  position: relative;
  color: #000;
  padding: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.table{
  padding: 0 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.table .tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 5rpx 0;
}
.table .th,
.table .td{
  padding: 15rpx 6rpx;
  text-align: center;
  width: 32.8%;
  box-sizing: border-box;
  word-break: break-all;
  color: #6B6B6B;
}
.table .th{
  font-weight: bold;
}
.table .th:nth-child(1){
  background: #C0C0C0;
  color: #6b6b6b;
}
.table .th:nth-child(2){
  background: #6B6B6B;
  color: #fff;
}
.table .th:nth-child(3){
  background: #EE6D00;
  color: #fff;
}
.table .tr:nth-child(odd) .td{
  background: #E3E3E3
}
.table .tr:nth-child(even) .td{
  background: #F1F1F1;
}
.table .zongji{
  font-weight: bold;
  line-height: 36rpx;
  font-size: 32rpx;
}
.table .zongji .right{
  color: #EE6D00;
}
.sec_foot{
  text-align: center;
  padding: 16rpx 0;
}
.sec_foot image{
  width: 359rpx;
  height: 111rpx;
}
.freePic{
  width: 42rpx;
  height: 29rpx;
  vertical-align: middle;
  margin-left: 8rpx;
}
.btn-jab {
  animation: jab 0.3s ease-in-out infinite;
  animation-direction: alternate;
}
@keyframes jab {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}
.tips {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #bbb;
  padding: 0 12.5rpx;
  text-align: center;
}
.chajia{
  padding: 40rpx 0;
}