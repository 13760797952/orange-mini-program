/**index.wxss**/
page{
  background: #f7f7f7;
}
.container{
  position: relative;
}
.banner image{
  width: 100%;
  height:  261rpx;
}
.sec {
  width: 90%;
  height: auto;
  background-color: #fff;
  margin: 10rpx 5%;
  border-radius: 10px;
  box-shadow: 0 0 46rpx #E4E3E3;
}
.sec .title {
  position: relative;
  color: #000;
  padding: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.sec .title:before,
.sec .title:after {
  content: "";
  width: 125rpx;
  height: 1px;
  background-color: #000;
  position: absolute;
  top: 51%;
}
.sec .title::before {
  left: 15%;
}
.sec .title:after {
  right: 15%;
}
.sec .price {
  position: relative;
  width: 100%;
  text-align: center;
}
.sec .price image {
  width: 90%;
  height: 142rpx;
}
.sec .price .inner_price {
  position: absolute;
  right: 17%;
  bottom: 22%;
}
.sec .price .inner_price image {
  display: none;
  width: 261rpx;
  height: 79rpx;
}
.sec .price .inner_price .show {
  display: block;
}
.sec1 {
  padding-top: 15rpx;
  color: #808080;
  font-size: 35rpx;
  text-align: center;
}
.sec1 view{
  display: inline-block;
  margin: 0 31rpx;
  font-weight: 900;
}
.sec1 text{
  font-weight: normal;
}
.sec_form{
  position: absolute;
  left: 10%;
  width: 80%;
  top: 606rpx;
}
.sec_form .form-field {
  position: relative;
  margin-top: 25rpx;
  font-size: 32rpx;
}
.sec_form radio-group {
  background: #e8e8e8;
  padding: 23rpx 20rpx;
}
.sec_form .form-field input {
  outline: none;
  border: none;
  background-color: #E8E8E8;
  padding: 0 20rpx;
  text-align: left;
  height: 94rpx;
  line-height: 94rpx;
  /* box-shadow: 0 1px 2px #b4b3b2; */
  border-radius: 2px;
  width: 100%;
  font-size: 32rpx;
  color: #757575;
  box-sizing: border-box;
}
.sec_form .btn {
  background-color: #ED6C00;
  text-align: center;
  text-indent: 0;
  height: 94rpx;
  width: 80%;
  font-size: 38rpx;
  color: #fff;
  border: none;
}
.btn-jab {
  animation: jab 0.3s ease-in-out infinite;
  animation-direction: alternate;
}
@keyframes jab {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.05);
  }
}
.sec_foot{
  text-align: center;
  padding: 16rpx 0;
}
.sec_foot image{
  width: 359rpx;
  height: 111rpx;
}
.sec_form .radio{
  margin-right: 35rpx;
}
.sec_form .radio text{
  vertical-align: middle;
  margin-left: 6rpx;
}
radio{
  border-radius: 50%;
  width: 40rpx;/* 最好是4的倍数，不然会不在中间 */
  height: 40rpx;
  border: 2rpx solid #aaa;/* 设置边框（外圆） */
  font-size: 0;/* 让边框重合 */
  vertical-align: middle;
}
radio .wx-radio-input{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx; 
  border: none;/* 替换边框（隐藏原有边框） */
}
.panel{
  padding-bottom: 490rpx;
}