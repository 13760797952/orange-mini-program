.auth-hint {
    position: fixed;
    top: 15vh;
    width: 86vw;
    left: 7vw;
    text-align: center;
    z-index: 999999;
    border-radius: 20rpx;
    background: #fff;
}

.auth-hint .content {
    line-height: 0;
}

.auth-hint .version {
    font-size: 26rpx;
    color: #eee;
}

.auth-bg {
    position: fixed;
    top: 0;
    background: #000;
    opacity: 0.5;
    width: 100vw;
    left: 0;
    height: 100vh;
    text-align: center;
    z-index: 99999;
}

.auth-hint .head {
    padding: 30rpx 0;
    font-size: 36rpx;
    color: #888;
    border-bottom: 2rpx solid #eee;
    margin-bottom: 20rpx;
    line-height: 1;
}

.auth-hint .top {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 20rpx;
    line-height: 1.7;
}

.auth-hint image {
    width: 500rpx;
}

.auth-hint .yoxi {
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    background: #04be01;
    border-radius: 80rpx;
    width: 500rpx;
    margin: 0 auto;
    font-size: 32rpx;
}