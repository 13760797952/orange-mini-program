page {
    background: #eee;
}

.container {
    background: none;
}

.box-top {
    width: 100%;
    height: 375rpx;
    position: relative;
    margin-bottom: 10rpx;
}

.box-top .box-bg {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 0;
}

.box-top .box-bg image {
    width: 100%;
    height: 100%;
}

.box-top .box-user {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
}

.box-top .box-user .box-img {
    margin: 80rpx auto 0;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
}

.box-top .box-user .box-img image {
    width: 100%;
    height: 100%;
}

.box-top .box-user .box-user-name {
    margin-top: 28rpx;
    text-align: center;
    font-size: 30rpx;
    color: #000;
}

.box-fun .box-li {
    position: relative;
    height: 98rpx;
    background: #fff;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    padding-left: 90rpx;
    font-size: 0;
}

.box-fun .box-li i {
    position: absolute;
    left: 34rpx;
    top: 26rpx;
    width: 42rpx;
    height: 42rpx;
    color: #f1b640;
    font-size: 36rpx;
}

.box-fun .box-li text {
    line-height: 98rpx;
    font-size: 30rpx;
    color: #5f5f5f;
}

.box-fun .box-li em {
    position: absolute;
    right: 24rpx;
    top: 26rpx;
    width: 42rpx;
    height: 42rpx;
    color: #d7d7d7;
    font-size: 36rpx;
}

.box-version {
    color: #ccc;
    font-size: 28rpx;
    text-align: center;
    margin-top: 60rpx;
}

.space-line {
    display: block;
    height: 10rpx;
}

.entrance-section {
    background-color: #fff;
    margin-bottom: 20rpx;
    border: solid #eee;
    border-width: 1rpx 0 1rpx 0;
    background: #eee;
}

.entrance-section>view {
    display: flex;
    height: 90rpx;
    align-items: center;
    font-size: 30rpx;
    color: #333;
    background: #fff;
    padding: 0 20rpx;
    transition: background-color .2s ease-out;
}

.entrance-section>view>i {
    text-align: center;
    font-size: 46rpx;
    margin-right: 20rpx;
}

.entrance-section>view:after {
    margin-left: auto;
    content: "\e604";
    font-family: "iconfont";
    font-size: inherit;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: #aaa;
}

.entrance-section>view:not(:last-of-type) {
    border-bottom: 1rpx solid #eee;
}

.entrance-hover {
    background-color: #f1f1f1;
}

.clear {
    font-size: 28rpx;
    display: block;
    text-align: center;
    color: #ccc;
    line-height: 90rpx;
    height: 90rpx;
}